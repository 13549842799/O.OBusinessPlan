<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oo.businessplan.article.mapper.LabelMapper">

     <resultMap id="LabelMap" type="label">
        <id property="id" column="id"/>
        <result property="delflag" column="delflag"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="createTime"/>
        <result property="name" column="name"/>
        <result property="adminId" column="adminId"/>
    </resultMap>

     <sql id="base_column">
        la.id,la.delflag,la.creator,la.createTime,la.name,la.adminId
     </sql>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO label
        (
            <trim suffixOverrides=",">
                <if test="delflag != null ">
                delflag,
                </if>
                <if test="creator != null ">
                creator,
                </if>
                <if test="createTime != null ">
                createTime,
                </if>
                <if test="name != null ">
                name,
                </if>
                <if test="adminId != null ">
                adminId
                </if>
            </trim>
        )
        VALUES (
            <trim suffixOverrides=",">
                <if test="delflag != null ">
                #{delflag,jdbcType=TINYINT},
                </if>
                <if test="creator != null ">
                #{creator},
                </if>
                <if test="createTime != null ">
                #{createTime},
                </if>
                <if test="name != null ">
                #{name},
                </if>
                <if test="adminId != null ">
                #{adminId}
                </if>
            </trim>
        )
    </insert>

    <update id="delete" >
        UPDATE label set delflag = #{delflag}
         WHERE id = #{ id }
    </update>

    <update id="update" parameterType="label">
        UPDATE label SET 
            <trim suffixOverrides=",">
                <if test="delflag != null ">
                delflag = #{delflag,jdbcType=TINYINT},
                </if>
                <if test="creator != null ">
                creator = #{creator},
                </if>
                <if test="createTime != null ">
                createTime = #{createTime},
                </if>
                <if test="name != null ">
                name = #{name},
                </if>
                <if test="adminId != null ">
                adminId = #{adminId}
                </if>
            </trim>
         WHERE id = #{id}
    </update>

    <update id="updateFull" parameterType="label">
        UPDATE label SET 
            delflag = #{delflag,jdbcType=TINYINT},
            creator = #{creator},
            createTime = #{createTime},
            name = #{name},
            adminId = #{adminId}
         WHERE id = #{id}
    </update>

    <select id="getById" resultType="label" parameterType="label">
        SELECT 
        <include refid="base_column"/>
        FROM label la
        WHERE la.id = #{id} AND la.delflag = #{delflag}
    </select>

    <select id="getList" resultType="label" parameterType="label">
        SELECT 
        <include refid="base_column"/>
        FROM label la
        WHERE 
    <trim prefixOverrides="AND">
        <if test="delflag != null ">
        AND la.`delflag` = #{delflag,jdbcType=TINYINT}
        </if>
        <if test="creator != null ">
        AND la.`creator` = #{creator}
        </if>
        <if test="createTime != null ">
        AND la.`createTime` = #{createTime}
        </if>
        <if test="name != null ">
        AND la.`name` LIKE CONCAT(#{name}, '%')
        </if>
        <if test="adminId != null ">
        AND la.`adminId` IN  (#{adminId}, 0)
        </if>
    </trim>
    </select>

</mapper>